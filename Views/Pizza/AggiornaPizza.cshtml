@{
}

@model Pizza

<div class="container">
	<form method="post" action="@Url.Action("EditPizza", "Pizza", @Model)">
		@Html.AntiForgeryToken()
		<div class="mb-3" hidden>
			<strong>Id:</strong>
			<input asp-for="Id">
		</div>
		<div class="mb-3">
			<strong>Nome:</strong>
			<input asp-for="Nome" >
		</div>
		<div class="mb-3">
			<strong >Descrizione:</strong>
			<input asp-for="Desc">
		</div>
		<div class="mb-3">
			<strong >Prezzo:</strong>
			<input asp-for="Prezzo">
		</div>
		
		<button class="btn-primary btn" type="submit">Conferma</button>
	</form>
</div>